{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "lib": ["ES2022", "DOM"],
        "esModuleInterop": true,
        "declaration": true,
        // Do not change or the linking script will stop working
        "outDir": "./dist",
        "sourceMap": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react-jsx",
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": [
        "src/**/*.deno.ts",
        "src/**/*.deno.tsx",
        "src/**/__tests__/**/*",
        "src/**/tests/**/*",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx"
    ]
}
